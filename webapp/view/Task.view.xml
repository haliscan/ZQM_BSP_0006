<mvc:View
    controllerName="com.karsan.qm.taskmanage.controller.Task"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
>
    <uxap:ObjectPageLayout
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false"
        headerContentPinned="true"
        visible="{viewModel>/VisDetail}"
    >
        <uxap:headerTitle>
            <core:Fragment
                fragmentName="com.karsan.qm.taskmanage.view.fragment.Notif.HeaderTitle"
                type="XML"
            />
        </uxap:headerTitle>

        <uxap:headerContent>
            <core:Fragment
                fragmentName="com.karsan.qm.taskmanage.view.fragment.Notif.HeaderContent"
                type="XML"
            />
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection showTitle="true">
                        <uxap:blocks>
                            <core:Fragment
                                fragmentName="com.karsan.qm.taskmanage.view.fragment.Notif.Tabbar"
                                type="XML"
                            />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>


